<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundsplash"
    tools:context="com.onoh.ewallet02.activity.LandingPageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/color1_dark"
        app:cardCornerRadius="15dp"
        android:layout_margin="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat datang di DEKa !"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi dompet elektronik pada lingkungan kampus anda."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_imglandingpage"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="MASUK"
                    android:backgroundTint="@color/color2"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/btn_masuk_landing"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="DAFTAR"
                    android:backgroundTint="@color/color2"
                    android:id="@+id/btn_daftar_landing"
                    />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
