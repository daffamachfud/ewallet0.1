<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".activity.transfer.TransferActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_transfer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Theme.ToolbarSaya"
            android:background="@color/color1"
            app:title="Transfer"
            app:titleTextColor="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/color1"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/tv_transfer_pakai_apa"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_transfer_notelepon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colo2"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="200dp">

        <ImageButton
            android:id="@+id/btn_trasnfer_noTelpn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colo2"
            android:src="@drawable/ic_btn_trasnfer_notelpn"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/cardview_transfer_notelepon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/colo2"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/btn_transfer_qrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colo2"
            android:src="@drawable/ic_btn_transfer_scanqr"
            />

    </androidx.cardview.widget.CardView>


</RelativeLayout>