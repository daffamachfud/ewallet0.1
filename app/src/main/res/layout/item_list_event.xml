<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViewEvent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_event"
                    android:layout_width="100dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:src="@color/grey"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp">

                    <TextView
                        android:id="@+id/tv_nama_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Event"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_location_on_black_24dp"
                            />
                        <TextView
                            android:id="@+id/tv_nama_tempat_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Tempat event"
                            android:textSize="10sp"
                            android:textColor="@color/color_subjudul"
                            android:layout_marginEnd="10dp"
                            />
                        
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_event_black_24dp"
                            />
                        <TextView
                            android:id="@+id/tv_tgl_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Acara "
                            android:textSize="10sp"
                            android:textColor="@color/color_subjudul"
                            />
                        
                    </LinearLayout>






                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="25dp"
                    android:layout_width="50dp"
                    android:backgroundTint="@color/color2">

                    <TextView
                        android:id="@+id/tv_jenis_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="Jenis Event"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        />

                </androidx.cardview.widget.CardView>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>