<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViewDonasi">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_donasi"
                    android:layout_width="100dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:src="@color/grey"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp">

                    <TextView
                        android:id="@+id/tv_nama_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Donasi"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_nama_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terkumpul"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_dana_terkumpul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp.2.000.000"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textColor="@color/color_judul"
                            android:layout_marginEnd="10dp"
                            />
                        
                        <ImageView
                            android:layout_marginStart="30dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_event_black_24dp"
                            />
                        <TextView
                            android:id="@+id/tv_tgl_donasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Donasi "
                            android:textSize="10sp"
                            android:textColor="@color/color_subjudul"
                            />
                        
                    </LinearLayout>






                </LinearLayout>




        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>