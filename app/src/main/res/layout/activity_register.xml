<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color1"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">


    <LinearLayout
        android:id="@+id/linearlayout_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_des_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/des_registrasi"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_des_register1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/des_registrasi1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

    </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_form_regis"
            android:layout_below="@+id/linearlayout_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/color1_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:outlineAmbientShadowColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:helperTextTextColor="@color/white"
                    app:counterTextColor="@color/white"
                    android:textColorHint="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:counterOverflowTextColor="@color/white"
                    app:errorTextColor="@color/design_default_color_error"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nama_daftar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nama"
                        android:background="@color/color1"
                        android:layout_margin="20dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/white"
                    app:helperTextTextColor="@color/white"
                    app:counterTextColor="@color/white"
                    android:textColorHint="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:counterOverflowTextColor="@color/white"
                    app:errorTextColor="@color/design_default_color_error"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nomor_telepon_daftar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nomor_telepon"
                        android:background="@color/color1"
                        android:layout_margin="20dp"
                        android:inputType="number"
                        android:textColor="@color/white"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/white"
                    app:helperTextTextColor="@color/white"
                    app:counterTextColor="@color/white"
                    android:textColorHint="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:counterOverflowTextColor="@color/white"
                    app:errorTextColor="@color/design_default_color_error"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email_daftar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:background="@color/color1"
                        android:layout_margin="20dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <Button
        android:layout_below="@+id/cv_form_regis"
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/color2"
        android:text="@string/daftar"
        />


    <LinearLayout
        android:layout_below="@+id/btn_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun ?"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/tv_masuk_disini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk disini"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            />

    </LinearLayout>


</RelativeLayout>