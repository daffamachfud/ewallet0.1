<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BottomNavigationActivity.ProfileActivity"
    android:background="@color/color_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color1">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Theme.ToolbarSaya"
                android:background="@color/color1"
                app:title="Profile"
                app:titleTextColor="@color/white"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                />
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.cardview.widget.CardView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cardview_profile"
            android:layout_below="@id/appbar_profile"
            android:backgroundTint="@color/color2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_profile"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nama"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_no_telp_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nomor_telepon"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_myqr"
            android:layout_below="@id/cardview_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_myqrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_iconmyqr"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_below="@id/cardview_myqr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="16sp"
                android:textColor="@color/color_judul"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                />

            <ImageButton
                android:id="@+id/btnProfileSaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btnprofilesaya"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/btnDaftarMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btndaftarmerchant"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/btnDompetMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btndompetmerchant"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textSize="16sp"
                android:textColor="@color/color_judul"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                />

            <ImageButton
                android:id="@+id/btnProfileSaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btncs"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/btnProfileSaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_faq"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/btnProfileSaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_infoapps"
                android:background="@color/white"/>





        </LinearLayout>






    </RelativeLayout>
</ScrollView>

